# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,jsx,ts,tsx}]
quote_type = single

[*.{md,mdx}]
max_line_length = off
trim_trailing_whitespace = false
insert_final_newline = false
